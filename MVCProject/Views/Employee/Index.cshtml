@model List<Employee>
@{
    ViewData["Title"] = "Employees";
	Layout = "_AdvancedLayout";
}

<h1>All Employees: </h1>
<div class="mb-3">
	<a asp-action="New" asp-controller="Employee" class="btn btn-success">Add New Employee</a>
</div>

<table class="table table-hover table-bordered">
    <tr>
		<th>ID</th>
		<th>Name</th>
		<th>Salary</th>
		<th>Job Title</th>
		<th></th>
    </tr>
	@foreach (var employee in Model)
	{
		<tr>
			<td>@employee.Id</td>
			<td>@employee.Name</td>
			<td>@employee.Salary</td>
			<td>@employee.JobTitle</td>
			<td>
				<a class="btn btn-warning" asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id" >Edit</a>

				<form asp-action="Delete" asp-controller="Employee" method="post"
					  asp-route-id="@employee.Id" class="d-inline"
					  onsubmit="return confirm('Are you sure you want to delete @employee.Name?');">
					  
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
		</tr>
	}
</table>

