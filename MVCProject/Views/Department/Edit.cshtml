@model Department
@{
    ViewData["Title"] = "Edit Department";


}


<form method="post" action="/Department/SaveEdit/@Model.Id">
    <div>
        <label>Department Name</label>
        <input type="text" value="@Model.Name" id="Name" name="Name" class="form-control" 

    </div>
    <div>
        <label>Manager Name</label>
        <input type="text" value="@Model.ManagerName" id="ManagerName" name="ManagerName" class="form-control"

    </div>
 
    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Go Back</a>
    </div>

</form>

