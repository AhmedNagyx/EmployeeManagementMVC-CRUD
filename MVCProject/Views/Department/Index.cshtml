@model List<Department>
@{
	ViewData["Title"] = "Departments";
	
}
<h1>All Departments: </h1>

<div class="mb-3">
	<a asp-action="Add" asp-controller="Department" class="btn btn-success">Add New Department</a>
	<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Go Back</a>

</div>

<table class="table table-hover table-bordered">
    <tr>
		<th>ID</th>
		<th>Department</th>
		<th>Manager</th>
		<th></th>
    </tr>    
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.ManagerName</td>
			<td>
				<a class="btn btn-warning" href="/Department/Edit/@item.Id">Edit</a>
				<form asp-action="Delete" asp-controller="Department" method="post"
					  asp-route-id="@item.Id" class="d-inline"
					  onsubmit="return confirm('Are you sure you want to delete @item.Name?');">

					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
		</tr>
	}
</table>

